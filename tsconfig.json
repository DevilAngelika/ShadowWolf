{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "CommonJS",
    "rootDir": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["helper/**/*", "integration/**/*", "interfaces/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
